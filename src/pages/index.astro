<style>
    .bienvenida {
        height: 100vh;
        font-size: clamp(20px, 1.2vw, 40px);
        width: 100vw;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: space-between;
        color: var(--black);
        overflow: hidden !important;
        color: var(--white);
    }
    .bienvenida-textos {
        margin-left: 5%;
        margin-bottom: 2%;
    }

    .bienvenida-titulo {
        font-family: "IBM Plex Serif";
        font-weight: normal;
        padding: 0;
        margin: 0;
    }
    .bienvenida-hello {
        margin: 0;
        font-family: "IBM Plex Sans", sans-serif;
        font-weight: normal;
        font-style: normal;
    }
    .bienvenida-since {
        margin: 1em 0;
        font-size: 0.8em;
        font-family: "IBM Plex Sans", sans-serif;
        font-weight: normal;
        font-style: normal;
    }

    .bienvenida-upper {
        font-size: 1em;
        font-weight: bold;
    }

    @media (max-width: 700px) {
        .bienvenida {
            height: 95vh;
            padding-bottom: 10vh;
            width: 100vw;
            overflow: hidden;
        }
        .bienvenida-textos{
            font-size: clamp(14px, 3.9vw, 16px);
            width: 90%;
        }
    }
</style>
