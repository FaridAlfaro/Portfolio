---
import Layout from "../layouts/Layout.astro"
import { slide } from "astro:transitions";
import { fade } from "astro:transitions";
import Close from "../components/Close.astro"
import OpcionesMenu from "../components/OpcionesMenu.astro"
import ViewTransitions from "astro/components/ViewTransitions.astro";
interface Props {
    title: string;
}
const {title} = Astro.props
---

<Layout title={title}>
    <ViewTransitions/>
    <div class="mobile">
    <OpcionesMenu position="65"/>
</div>
    <Close url="/"/>
    <div class="menu-contenedor" transition:animate={slide({duration: '.5s'})}>
        <slot /> 
    </div>
</Layout>

<style>
    .correr{
        position: absolute;
        left: 5%;
        top: calc(50% - 100px);
        transition: ease 1s;
    }
    .menu-contenedor{
        overflow: hidden;
        position: absolute;
        right: 0;
        top: 0;
        width: 60vw;
        height: 100%;
        border-left: solid 5px var(--black);
    }
    @media(max-width: 700px){
        .menu-contenedor{
            width: 100%;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            border: none;
            max-width: 100vw;
            overflow-x: hidden !important;
        }
        .mobile{
            display: none;
        }
    }
</style>

